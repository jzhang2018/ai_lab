from smolagents import LiteLLMModel, CodeAgent

# Initialize the LiteLLMModel with Open AI api key
model = LiteLLMModel(
    model_id="openai/gpt-3.5-turbo",
    api_key="{{ openai_api_key }}"
)

# Create a CodeAgent using the LiteLLMModel
agent = CodeAgent(
    model=model,
    max_steps=10,
    tools=[]  # no tools needed for now
)

# Prompt and responses
response = agent.run("{{ agentic_prompt | default('Write a Python script that prints \"Hello from the agent!\"') }}")
print(response)
